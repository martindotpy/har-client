---
import { sectionClasses } from "@/components/organisms/styles/_section-styles";
import { cn } from "@/lib/tailwind-class";
import type { HTMLAttributes } from "astro/types";

// Context
type Props = HTMLAttributes<"section">;

const { class: className, "class:list": classList, ...props } = Astro.props;
---

<section class={cn(sectionClasses, className, classList)} {...props}>
  <slot />
</section>
