{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "HAR Client (Server) ğŸ",
      "command": "./node_modules/.bin/astro dev --host",
      "request": "launch",
      "type": "node-terminal",
      "internalConsoleOptions": "neverOpen",
      "presentation": {
        "hidden": true
      }
    },
    {
      "name": "HAR Client (Client - MS Edge) ğŸ",
      "request": "launch",
      "type": "msedge",
      "url": "http://localhost:4321",
      "webRoot": "${workspaceFolder}",
      "presentation": {
        "hidden": true
      }
    },
    {
      "name": "HAR Client (Client - Chrome) ğŸ",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:4321",
      "webRoot": "${workspaceFolder}",
      "presentation": {
        "hidden": true
      }
    }
  ],
  "compounds": [
    {
      "name": "HAR Client (Server + Client) ğŸ Windows",
      "configurations": [
        "HAR Client (Server) ğŸ",
        "HAR Client (Client - MS Edge) ğŸ"
      ],
      "stopAll": true
    },
    {
      "name": "HAR Client (Server + Client) ğŸ Linux/Mac",
      "configurations": [
        "HAR Client (Server) ğŸ",
        "HAR Client (Client - Chrome) ğŸ"
      ],
      "stopAll": true
    }
  ]
}
